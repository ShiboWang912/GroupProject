<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Incident ID</label>
                    <input type="text" class="form-control"
                    id="IDTextField"
                    placeholder="Enter the Incident ID"
                    name="incidentId" 
                    value="<%= incident.incidentId %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Date</label>
                    <input type="text" class="form-control"
                    id="DateTextField"
                    placeholder="Enter the Incident's date"
                    name="date" 
                    value="<%= incident.date %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Priority</label>
                    <input type="text" class="form-control"
                    id="priorityTextField"
                    placeholder="Enter the priority"
                    name="priority" 
                    value="<%= incident.priority %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Report User</label>
                    <input type="text" class="form-control"
                    id="userTextField"
                    placeholder="Enter the Report User's name"
                    name="user" 
                    value="<%= incident.user %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Narrative</label>
                    <textarea type="text" class="form-control"
                    id="narrativeTextArea"
                    placeholder="Enter the a brief description of the incident"
                    name="narrative" 
                    
                    value="<%= incident.narrative %>"required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Status</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="Enter the Incident's Status"
                    name="status" 
                    value="<%= incident.status %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/incident-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>